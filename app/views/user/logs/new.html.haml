.edit-log
  .edit-form
    = form_with(model: @log, url: logs_path, local: true) do |f|
      .time-edit.mb-3
        %ul
          -@log.errors.full_messages.each do |message|
            %li.text-danger= message
        .form-group.mb-3
          %label 出勤日
          = f.date_field :day, class: 'form-control'
        .form-group.mb-3
          %label 出勤
          = f.time_select :time_in, {}
        .form-group.mb-3
          %label 退勤
          = f.time_select :time_out, {}
        .form-group.mb-3
          %label 休憩
          = f.select :rest_time, ['00:00', '00:15', '00:30', '00:45', '01:00'], {}, class: 'form-control form-control-inline'
      .edit-button.actions
        = f.submit '追加する', class: 'btn btn-secondary'
